{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "alwaysStrict": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "lib",
    "jsx":"react",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "es5",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*"]
}
